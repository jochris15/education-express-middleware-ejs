<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GAME COLLECTION</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap');

        body {
            font-family: 'Space Grotesk', sans-serif;
        }

        .neo-shadow {
            box-shadow: 8px 8px 0px #000000;
        }

        .neo-shadow-small {
            box-shadow: 4px 4px 0px #000000;
        }
    </style>
</head>

<body class="bg-yellow-300 min-h-screen p-6 max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center bg-white border-4 border-black neo-shadow mb-8 p-6">
        <h1 class="text-4xl font-bold text-black mb-2">GAMES COLLECTION</h1>
        <a href="/games/add"
            class="inline-block bg-green-400 border-4 border-black neo-shadow-small px-6 py-3 text-black font-bold text-lg hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition-all duration-200">
            + ADD NEW GAME
        </a>
    </div>

    <!-- Games Table -->
    <div class="bg-white border-4 border-black neo-shadow overflow-hidden">
        <div class="bg-black text-white p-4">
            <h2 class="text-2xl font-bold">GAME LIST</h2>
        </div>

        <!-- Search Form -->
        <div class="bg-cyan-400 border-b-4 border-black p-6">
            <form action="/games?search" method="GET" class="flex flex-col sm:flex-row gap-4">
                <div class="flex-1">
                    <input type="text" name="search" placeholder="Search games by name..."
                        class="w-full p-4 text-lg font-bold text-black bg-white border-4 border-black focus:outline-none focus:ring-0 focus:border-black"
                        value="">
                </div>
                <button type="submit"
                    class="bg-purple-400 border-4 border-black neo-shadow-small px-8 py-4 text-black font-bold text-lg hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition-all duration-200 whitespace-nowrap">
                    SEARCH
                </button>
                <a href="/games"
                    class="inline-block bg-gray-400 border-4 border-black neo-shadow-small px-8 py-4 text-black font-bold text-lg hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition-all duration-200 text-center whitespace-nowrap">
                    CLEAR
                </a>
            </form>
        </div>

        <% if (games && games.length> 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-pink-400 border-b-4 border-black">
                        <tr>
                            <th class="border-r-4 border-black p-4 text-left font-bold text-black">GAME</th>
                            <th class="border-r-4 border-black p-4 text-left font-bold text-black">RELEASE
                                DATE
                            </th>
                            <th class="border-r-4 border-black p-4 text-left font-bold text-black">DEVELOPER
                            </th>
                            <th class="border-r-4 border-black p-4 text-left font-bold text-black">GENRE
                            </th>
                            <th class="p-4 text-left font-bold text-black">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% games.forEach((game, index)=> { %>
                            <tr
                                class="<%= index % 2 === 0 ? 'bg-blue-100' : 'bg-purple-100' %> border-b-2 border-black hover:bg-orange-200 transition-colors duration-200">
                                <td class="border-r-2 border-black p-4">
                                    <div class="flex items-center space-x-3">
                                        <img src="<%= game.gameImg %>" alt="<%= game.name %>"
                                            class="w-16 h-16 object-cover border-2 border-black rounded-none bg-gray-200">
                                        <div>
                                            <div class="font-bold text-black text-lg">
                                                <%= game.name %>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="border-r-2 border-black p-4 font-bold text-black">
                                    <%= game.formattedReleaseDate %>
                                </td>
                                <td class="border-r-2 border-black p-4 font-bold text-black">
                                    <%= game.developer %>
                                </td>
                                <td class="border-r-2 border-black p-4">
                                    <span
                                        class="bg-cyan-300 border-2 border-black px-3 py-1 text-black font-bold text-sm">
                                        <%= game.genre %>
                                    </span>
                                </td>
                                <td class="p-4">
                                    <div class="flex space-x-2">
                                        <a href="/games/<%= game.id %>"
                                            class="bg-blue-400 border-2 border-black px-3 py-1 text-black font-bold text-sm hover:translate-x-1 hover:translate-y-1 transition-transform duration-200">
                                            DETAIL
                                        </a>
                                        <a href="/games/edit/<%= game.id %>"
                                            class="bg-orange-400 border-2 border-black px-3 py-1 text-black font-bold text-sm hover:translate-x-1 hover:translate-y-1 transition-transform duration-200">
                                            EDIT
                                        </a>
                                        <a href="/games/delete/<%= game.id %>"
                                            class="bg-orange-400 border-2 border-black px-3 py-1 text-black font-bold text-sm hover:translate-x-1 hover:translate-y-1 transition-transform duration-200">
                                            DELETE
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="p-12 text-center">
                    <div class="text-6xl mb-4">ðŸŽ²</div>
                    <h3 class="text-2xl font-bold text-black mb-2">NO GAMES FOUND!</h3>
                    <a href="/games/add"
                        class="bg-green-400 border-4 border-black neo-shadow-small px-6 py-3 text-black font-bold text-lg hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition-all duration-200 inline-block">
                        ADD YOUR FIRST GAME
                    </a>
                </div>
                <% } %>
    </div>

    <!-- Footer -->
    <div class="mt-8 text-center">
        <div class="bg-black text-white border-4 border-black neo-shadow p-4">
            <p class="font-bold">Demo for Express,EJS and Middleware</p>
        </div>
    </div>
</body>

</html>